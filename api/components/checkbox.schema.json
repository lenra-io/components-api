{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://lenra.io/checkbox.schema.json",
    "title": "Checkbox",
    "description": "Element of type Checkbox",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^checkbox$"
        },
        "value": {
            "description": "The default state of the checkbox",
            "type": "boolean"
        },
        "label": {
            "description": "The text showed aside of the checkbox",
            "type": "string"
        },
        "disabled": {
            "description": "Whether the checkbox should be disabled or not",
            "type": "boolean"
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onChange": {
                    "$ref": "listeners/onchange.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}