{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "textfield.schema.json",
    "title": "TextField",
    "description": "Element of type TextField",
    "type": "component",
    "properties": {
        "type": {
            "description": "The type of the element",
            "enum": [
                "textfield"
            ]
        },
        "autocorrect": {
            "description": "Whether to enable the autocorrection",
            "type": "boolean"
        },
        "autofillHints": {
            "description": "The type of this text input to provide autofill hints.",
            "$ref": "defs/autofillHints.schema.json"
        },
        "autofocus": {
            "description": "Whether this Textfield should be focused initially.",
            "type": "boolean"
        },
        "buildCounter": {
            "description": "Callback that generates a custom counter widget.",
            "$ref": "defs/listener.schema.json"
        },
        "style": {
            "description": "The style of the Textfield.",
            "$ref": "defs/textFieldStyle.schema.json"
        },
        "dragStartBehavior": {
            "description": "Determines the way that drag start behavior is handled.",
            "$ref": "defs/dragStartBehavior.schema.json"
        },
        "enabled": {
            "description": "Whether the text field is enabled.",
            "type": "boolean"
        },
        "enableIMEPersonalizedLearning": {
            "__comment__": "TODO",
            "description": "",
            "type": "boolean"
        },
        "enableInteractiveSelection": {
            "__comment__": "TODO",
            "description": "",
            "type": "boolean"
        },
        "enableSuggestions": {
            "__comment__": "TODO",
            "description": "",
            "type": "boolean"
        },
        "expands": {
            "description": "Whether the TextField is sized to fill its parent.",
            "type": "boolean"
        },
        "keyboardType": {
            "description": "The type of the keyboard to use for editing the text.",
            "$ref": "defs/textInputType.schema.json"
        },
        "maxLength": {
            "description": "The maximum number of characters to allow in the text field.",
            "type": "integer"
        },
        "maxLengthEnforcement": {
            "description": "Determines how the maxLength limit should be enforced.",
            "$ref": "defs/maxLengthEnforcement.schema.json"
        },
        "maxLines": {
            "description": "",
            "type": "integer"
        },
        "minLines": {
            "description": "",
            "type": "integer"
        },
        "obscureText": {
            "description": "",
            "type": "boolean"
        },
        "onAppPrivateCommand": {
            "description": "",
            "$ref": "defs/listener.schema.json"
        },
        "onChanged": {
            "description": "",
            "$ref": "defs/listener.schema.json"
        },
        "onEditingComplete": {
            "description": "",
            "$ref": "defs/listener.schema.json"
        },
        "onSubmitted": {
            "description": "",
            "$ref": "defs/listener.schema.json"
        },
        "onTap": {
            "description": "",
            "$ref": "defs/listener.schema.json"
        },
        "readOnly": {
            "description": "",
            "type": "boolean"
        },
        "scrollController": {
            "description": "",
            "$ref": "defs/scrollController.schema.json"
        },
        "scrollPhysics": {
            "description": "",
            "$ref": "defs/scrollPhysics.schema.json"
        },
        "selectionControls": {
            "description": "",
            "$ref": "defs/textSelectionControls.schema.json"
        },
        "showCursor": {
            "description": "",
            "type": "boolean"
        },
        "smartDashesType": {
            "description": "",
            "enum": [
                "disabled",
                "enabled"
            ]
        },
        "smartQuotesType": {
            "description": "",
            "enum": [
                "disabled",
                "enabled"
            ]
        },
        "textCapitalization": {
            "description": "",
            "enum": [
                "none",
                "words",
                "sentences",
                "characters"
            ]
        },
        "textDirection": {
            "description": "",
            "enum": [
                "ltr",
                "rtl"
            ]
        },
        "textInputAction": {
            "description": "",
            "enum": [
                "continueAction",
                "done",
                "emergencyCall",
                "go",
                "join",
                "newline",
                "next",
                "none",
                "previous",
                "route",
                "search",
                "send",
                "unspecified"
            ]
        },
        "toolbarOptions": {
            "description": "",
            "$ref": "defs/toolbarOptions.schema.json"
        }
    },
    "required": [
        "type"
    ],
    "additionalProperties": false
}