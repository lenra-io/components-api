{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "textStyle.schema.json",
    "title": "TextStyle",
    "description": "The style of the Text.",
    "type": "object",
    "properties": {
        "color": {
            "description": "The color of the text.",
            "$ref": "defs/color.schema.json"
        },
        "decoration": {
            "$ref": "defs/textDecoration.schema.json"
        },
        "decorationColor": {
            "description": "The color of the decoration.",
            "$ref": "defs/color.schema.json"
        },
        "decorationStyle": {
            "$ref": "defs/textDecorationStyle.schema.json"
        },
        "decorationThickness": {
            "description": "thickness of the decoration",
            "type": "number",
            "default": 1
        },
        "fontFamily": {
            "description": "The font family of the text",
            "type": "string"
        },
        "fontFamilyFallback": {
            "description": "the list of font families to use if the first font family define cannot be found",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "fontSize": {
            "description": "the size to put on the text",
            "type": "number",
            "default": 1
        },
        "fontStyle": {
            "description": "the style to use on the text",
            "type": "string",
            "enum": [
                "italic",
                "normal"
            ]
        },
        "fontWeight": {
            "description": "The weight of the text.",
            "type": "string",
            "enum": [
                "bold",
                "normal",
                "w100",
                "w200",
                "w300",
                "w400",
                "w500",
                "w600",
                "w700",
                "w800",
                "w900"
            ]
        },
        "height": {
            "description": "The height of this text",
            "type": "number",
            "default": 1
        },
        "letterSpacing": {
            "description": "The amount of space to add between each letter.",
            "type": "number",
            "default": 1
        },
        "overflow": {
            "description": "How visual text overflow should be handled",
            "type": "string",
            "enum": [
                "clip",
                "ellipsis",
                "fade",
                "visible"
            ]
        },
        "shadows": {
            "description": "A list of Shadows that will be painted underneath the text",
            "type": "array",
            "items": {
                "$ref": "boxShadow.schema.json"
            }
        },
        "textBaseline": {
            "description": "The common baseline that should be aligned between this text and its parent text",
            "$ref": "textBaseline.schema.json"
        },
        "wordSpacing": {
            "description": "The amount of space to add at each sequence of white-space",
            "type": "number",
            "default": 1
        }
    },
    "additionalProperties": false
}