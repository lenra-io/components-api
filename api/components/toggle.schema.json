{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://lenra.io/toggle.schema.json",
    "title": "Toggle",
    "description": "Element of type Toggle",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^toggle$"
        },
        "value": {
            "description": "the value of the element",
            "type": "boolean"
        },
        "activeColor": {
            "description": "The activeColor of the element",
            "type": "string",
            "default": "lenraFunGreenBase"
        },
        "inactiveColor": {
            "description": "The inactiveColor of the element",
            "type": "string",
            "default": "greyNature"
        },
        "disabledColor": {
            "description": "The disabledColor of the element",
            "type": "string",
            "default": "greyLight"
        },
        "label": {
            "description": "The label of the element",
            "type": "string"
        },
        "labelColor": {
            "description": "The labelColor of the element",
            "type": "string",
            "default": "blackMoon"
        },
        "disabledLabelColor": {
            "description": "The disabledLabelColor of the element",
            "type": "string",
            "default": "greyNature"
        },
        "disabled": {
            "description": "Whether the element is disabled or not",
            "type": "boolean",
            "default": false
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onClick": {
                    "$ref": "listeners/onclick.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": true
}