{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://lenra.io/checkbox.schema.json",
    "title": "Checkbox",
    "description": "Element of type Checkbox",
    "type": "object",
    "properties": {
        "type": {
            "description": "The identifier of the component",
            "type": "string",
            "pattern": "^checkbox$"
        },
        "value": {
            "description": "The default state of the checkbox",
            "type": "boolean"
        },
        "label": {
            "description": "The value of the text next to the checkbox",
            "type": "string"
        },
        "disabled": {
            "description": "If true, the checkbox is disabled",
            "type": "boolean",
            "default": false
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onPressed": {
                    "$ref": "listeners/onpressed.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}