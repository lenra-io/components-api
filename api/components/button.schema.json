{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://lenra.io/button.schema.json",
    "title": "Button",
    "description": "Element of type Button",
    "type": "object",
    "properties": {
        "type": {
            "description": "The identifier of the component",
            "type": "string",
            "pattern": "^button$"
        },
        "text": {
            "description": "The value of the text inside the button",
            "type": "string"
        },
        "disabled": {
            "description": "The button is disabled if true",
            "type": "boolean",
            "default": false
        },
        "size": {
            "description": "The size of the button",
            "type": "string",
            "enum": [
                "small",
                "medium",
                "large"
            ],
            "default": "medium"
        },
        "mainStyle": {
            "description": "The main style of the button",
            "type": "string",
            "enum": [
                "primary",
                "secondary",
                "tertiary"
            ],
            "default": "primary"
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onPressed": {
                    "$ref": "listeners/onpressed.schema.json"
                }
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}