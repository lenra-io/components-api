{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://lenra.io/button.schema.json",
    "title": "Button",
    "description": "Element of type Button",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "^button$"
        },
        "text": {
            "description": "the text displayed in the element",
            "type": "string"
        },
        "disabled": {
            "description": "Whether the button should be disabled or not",
            "type": "boolean"
        },
        "listeners": {
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "onPressed": {
                    "$ref": "listeners/onPressed.schema.json"
                }
            }
        },
        "size": {
            "description": "Size of the button component",
            "type": "string",
            "enum": [
                "Small",
                "Medium",
                "Large"
            ]
        },
        "lenraType": {
            "description": "LenraComponentType of the the Button",
            "type": "string",
            "enum": [
                "Primary",
                "Secondary",
                "Tertiary"
            ]
        }
    },
    "required": [
        "type",
        "text",
        "onPressed"
    ],
    "additionalProperties": false
}