{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "container.schema.json",
    "title": "container",
    "description": "A container that can be used wrap a component and provide some additional functionality such as padding or border.",
    "type": "component",
    "properties": {
        "type": {
            "description": "The identifier of the component.",
            "enum": [
                "container"
            ]
        },
        "child": {
            "type": "component"
        },
        "border": {
            "$ref": "defs/border.schema.json"
        },
        "padding": {
            "$ref": "defs/padding.schema.json"
        },
        "constraints": {
            "$ref": "defs/boxConstraints.schema.json"
        },
        "decoration": {
            "$ref": "defs/boxDecoration.schema.json"
        }
    },
    "required": [
        "type",
        "child"
    ],
    "additionalProperties": false
}