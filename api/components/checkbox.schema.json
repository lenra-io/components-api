{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "https://lenra.io/checkbox.schema.json",
    "title": "Checkbox",
    "description": "Element of type Checkbox",
    "type": "component",
    "properties": {
        "type": {
            "description": "The identifier of the component",
            "enum": [
                "checkbox"
            ]
        },
        "value": {
            "description": "The default state of the checkbox",
            "type": "boolean"
        },
        "label": {
            "description": "The value of the text next to the checkbox",
            "type": "string"
        },
        "disabled": {
            "description": "If true, the checkbox is disabled",
            "type": "boolean",
            "default": false
        },
        "onPressed": {
            "$ref": "defs/listener.schema.json"
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}