{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "text.schema.json",
    "title": "Text",
    "description": "Element of type Text",
    "type": "component",
    "properties": {
        "type": {
            "description": "The type of the element",
            "enum": [
                "text"
            ]
        },
        "value": {
            "description": "the value displayed in the element",
            "type": "string"
        },
        "style": {
            "$ref": "defs/textStyle.schema.json"
        },
        "locale": {
            "description": "the value of the language for the text",
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "en",
                "EN"
            ]
        },
        "semanticsLabel": {
            "description": "The value to explain a different semantics",
            "type": "string"
        },
        "spellOut": {
            "description": "the value true or false to activate the assistive technologies should spell out this text character by character",
            "type": "boolean"
        },
        "children": {
            "description": "to put some text children after the parent (only text can be children of this text)",
            "type": "array",
            "items": {
                "type": "component"
            }
        }
    },
    "required": [
        "type",
        "value"
    ],
    "additionalProperties": false
}