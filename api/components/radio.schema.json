{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "radio.schema.json",
    "title": "Radio",
    "description": "Element of type Radio",
    "type": "component",
    "properties": {
        "type": {
            "description": "The type of the element",
            "enum": [
                "radio"
            ]
        },
        "value": {
            "description": "The value of the radio",
            "type": "string"
        },
        "groupValue": {
            "description": "The value group of the radio",
            "type": "string"
        },
        "label": {
            "description": "The label showed aside of the radio",
            "type": "string"
        },
        "disabled": {
            "description": "Whether the radio should be disabled or not",
            "type": "boolean"
        },
        "onPressed": {
            "$ref": "defs/listener.schema.json"
        }
    },
    "required": [
        "type",
        "value",
        "groupValue",
        "label"
    ],
    "additionalProperties": false
}