{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "button.schema.json",
    "title": "Button",
    "description": "The button component.",
    "type": "component",
    "properties": {
        "type": {
            "description": "The identifier of the component.",
            "enum": [
                "button"
            ]
        },
        "text": {
            "description": "The label to use inside of the button.",
            "type": "string"
        },
        "disabled": {
            "description": "The button is disabled if this property is set to `true`.",
            "type": "boolean",
            "default": false
        },
        "size": {
            "$ref": "defs/size.schema.json"
        },
        "mainStyle": {
            "$ref": "defs/style.schema.json"
        },
        "onPressed": {
            "$ref": "defs/listener.schema.json"
        },
        "leftIcon": {
            "type": "component",
            "properties": {
                "type": {
                    "enum": [
                        "icon"
                    ]
                }
            }
        },
        "rightIcon": {
            "type": "component",
            "properties": {
                "type": {
                    "enum": [
                        "icon"
                    ]
                }
            }
        }
    },
    "required": [
        "type",
        "text"
    ],
    "additionalProperties": false
}