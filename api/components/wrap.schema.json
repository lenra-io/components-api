{
    "$schema": "https://raw.githubusercontent.com/lenra-io/ex_component_schema/beta/priv/static/draft-lenra.json",
    "$id": "wrap.schema.json",
    "title": "Wrap",
    "description": "Element of type Wrap",
    "type": "component",
    "properties": {
        "type": {
            "description": "The identifier of the component",
            "enum": [
                "wrap"
            ]
        },
        "children": {
            "description": "The children",
            "type": "array",
            "items": {
                "type": "component"
            }
        },
        "direction": {
            "$ref": "defs/direction.schema.json"
        },
        "crossAxisAlignment": {
            "description": "The alignment along the cross axis",
            "type": "string",
            "enum": [
                "start",
                "end",
                "center"
            ],
            "default": "start"
        },
        "spacing": {
            "description": "The multiplier of the base size for the minimal spacing",
            "type": "number",
            "default": 0
        },
        "runSpacing": {
            "description": "The multiplier of the base size for spacing between different line in Wrap",
            "type": "number",
            "default": 0
        },
        "alignment": {
            "$ref": "defs/wrapAlignment.schema.json"
        },
        "runAlignment": {
            "$ref": "defs/wrapAlignment.schema.json"
        },
        "horizontalDirection": {
            "$ref": "defs/horizontalDirection.schema.json"
        },
        "verticalDirection": {
            "$ref": "defs/verticalDirection.schema.json"
        }
    },
    "required": [
        "type",
        "children"
    ],
    "additionalProperties": false
}